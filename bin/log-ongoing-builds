#!/usr/bin/env bash

cwd="$(cd "$(dirname "$0")" && pwd)"

args=""
open=false
for id in $("$cwd/ongoing-builds")
do
    if $open
    then
        args+="\; split-window -h "
    fi
    args+="\"echo 'Streaming $id'; gcloud builds log --stream $id; bash\" "
    open=true
done

if [ "$args" == "" ]
then
    echo "No builds ongoing."
    exit 1
fi

args+="; select-layout even-horizontal"

eval "tmux new-session $args"
