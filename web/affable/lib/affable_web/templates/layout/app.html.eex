<main role="main" class="container">
  <div class="flash">
    <%= if error_message = get_flash(@conn, :error) do %>
      <p class="flash-error" role="alert">
        <%= error_message %>
      </p>
    <% end %>
    <%= if info_message = get_flash(@conn, :info) do %>
      <p class="flash-info" role="alert">
        <%= info_message %>
      </p>
    <% end %>
  </div>
  <%= @inner_content %>
</main>
